<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".Cadastro" >


<android.support.constraint.ConstraintLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TextView
        android:id="@+id/txtTituloCadAluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="Cadastro de Alunos"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064" />

    <EditText
        android:id="@+id/cadAlunoTxtNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="@string/nome"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/txtTituloCadAluno"
        app:layout_constraintHorizontal_bias="0.382"
        app:layout_constraintStart_toStartOf="@+id/txtTituloCadAluno"
        app:layout_constraintTop_toBottomOf="@+id/txtTituloCadAluno" />

    <EditText
        android:id="@+id/cadAlunoTxtTelefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/telefone"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/cadAlunoTxtNome"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cadAlunoTxtNome"
        app:layout_constraintTop_toBottomOf="@+id/cadAlunoTxtNome" />

    <EditText
        android:id="@+id/cadAlunoTxtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/cadAlunoTxtTelefone"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/cadAlunoTxtTelefone"
        app:layout_constraintTop_toBottomOf="@+id/cadAlunoTxtTelefone" />

    <EditText
        android:id="@+id/cadAlunoTxtSite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/site"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/cadAlunoTxtEmail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cadAlunoTxtEmail"
        app:layout_constraintTop_toBottomOf="@+id/cadAlunoTxtEmail" />

    <RatingBar
        android:id="@+id/cadAlunoRBarNota"
        android:layout_width="246dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/cadAlunoTxtSite"
        app:layout_constraintStart_toStartOf="@+id/cadAlunoTxtSite"
        app:layout_constraintTop_toBottomOf="@+id/cadAlunoTxtSite" />

    <Button
        android:id="@+id/btnCadastroAluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="SALVAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cadAlunoRBarNota"
        app:layout_constraintHorizontal_bias="0.822"
        app:layout_constraintStart_toStartOf="@+id/cadAlunoRBarNota"
        app:layout_constraintTop_toBottomOf="@+id/cadAlunoRBarNota"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnExcluirAluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="EXCLUIR"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/btnCadastroAluno"
        app:layout_constraintHorizontal_bias="0.772"
        app:layout_constraintStart_toStartOf="@+id/cadAlunoRBarNota"
        tools:layout_editor_absoluteY="444dp" />

</android.support.constraint.ConstraintLayout>
</ScrollView>